@model IEnumerable<TrouveUnBand.Models.Event>
@{
    ViewBag.Title = "Événements";
}
<h2>
    Événements</h2>
<p>
        @Html.ActionLink("Créer un événement", "Create", new { controller = "Event" }, new { @class = "btn btn-primary" })
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail card">
                <img src="@item.Photo" width="250" height="172" class="photo" alt="Image">
                <div class="caption">
                    <h3>
                        <span class="glyphicon glyphicon-music"></span>@Html.DisplayName(item.Name)</h3>
                    <hr class="colorgraph" />
                    <p>
                        <h4>
                            <i class="fa fa-building"></i>@Html.DisplayName(item.Location)</h4>
                    </p>
                    <p>
                        <span class="glyphicon glyphicon-map-marker"></span>
                        @Html.DisplayName(item.City)
                    </p>
                    <p>
                        <span class="glyphicon glyphicon-calendar"></span>@Html.DisplayName(item.EventDate.ToString("dd MMMM yyyy à HH:mm"))
                    </p>
                    @{var TextPopOver = "";}
                    @if (item.Bands.FirstOrDefault() != null)
                    {
                        foreach (var band in item.Bands)
                        {
                            TextPopOver += band.Name + "<br/>";
                        }
                        <p>
                            <i class="fa fa-users"></i>
                            @Html.DisplayName(@item.Bands.FirstOrDefault().Name)
                            <span id="popovercustom" class="label label-default label-popover" tabindex="0" role="button"
                                    data-toggle="popover" data-html="true" title="Groupe(s) de l'événement"
                                    data-content="@TextPopOver">...</span>
                        </p>
                    }
                    @{TextPopOver = "";}
                    @foreach (var genre in item.Genres)
                    {
                        TextPopOver += genre.Name + "<br/>";
                    }
                    <p>
                        <span class="glyphicon glyphicon-headphones"></span>
                        @Html.DisplayName(@item.Genres.FirstOrDefault().Name)
                        <span id="popovercustom" class="label label-default label-popover" tabindex="0" role="button"
                                data-toggle="popover" data-html="true" title="Genres de l'événement"
                                data-content="@TextPopOver">...</span>
                    </p>
                    <hr class="colorgraph" />
                    <p>
                        @Html.ActionLink("Détails", "EventProfile", new { id = item.Event_ID }, new { @class = "btn btn-default col-md-3" })
                        @if (item.User.Nickname == User.Identity.Name)
                        {
                            @Html.ActionLink("Modifier", "Edit", new { id = item.Event_ID }, new { @class = "btn btn-primary col-md-4 col-md-push-1" })
                            @Html.ActionLink("Annuler", "Delete", new { id = item.Event_ID }, new { @class = "btn btn-danger col-md-3 col-md-push-2" })
                            <label>
                            </label>
                        }
                    </p>
                </div>
            </div>
        </div>
    }
</div>
</div>