@model TrouveUnBand.Models.Event
@{
    ViewBag.Title = "Profil de l'événement";
}
<div class="row">
    <div class="col-md-3 profile-section profile-quickinfo-tab">
        <div class="profile-header profile-header-sidebar">
            <strong>Événement</strong>
        </div>
        <div class="profile-content">
            <a href="#" data-toggle="modal" data-target="#PicModal">
                <img id="profile-main-pic" alt="" src="@Model.Photo" class="photo" />
            </a>
            <div class="profile-user-quickinfo">
                <ul class="list-unstyled">
                    <li>
                        <span>Nom:</span>
                        <span class="col-md-12 row">@Model.Name</span>
                    </li>
                    <li>
                        <span>Localisation:</span>
                        <span class="col-md-12 row">@Model.Location</span>
                    </li>
                    @if (Model.Genres != null)
                    {
                        <li>
                            <span>Style:</span>
                            <span class="col-md-12 row">@Model.Genres.ElementAt(0).Name</span>
                        </li>
                    }
                    <li>
                        <span>Date:</span>
                        <span class="col-md-12 row">@Model.EventDate</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div id="profile-main-tab" class="col-md-7">
        <div class="profile-main-content col-md-12">
            <div id="information" class="profile-section col-md-12">
                <div class="profile-tab-header">
                    <span class="glyphicon glyphicon-info-sign"></span><strong>Informations</strong>
                    <i class="chevron glyphicon glyphicon-chevron-down text-muted pull-right"></i>
                </div>
                <div class="profile-tab-content">
                    <span>@Model.Description</span>
                </div>
            </div>
            <div id="localisation" class="profile-section col-md-12">
                <div class="profile-tab-header">
                    <span class="glyphicon glyphicon-map-marker"></span><strong>Localisation</strong>
                    <i class="chevron glyphicon glyphicon-chevron-down text-muted pull-right"></i>
                </div>
                <div class="profile-tab-content">
                </div>
            </div>
            <div id="listen" class="profile-section col-md-12">
                <div class="profile-tab-header">
                    <span class="glyphicon glyphicon-headphones"></span><strong>Écouter</strong> <i class="chevron glyphicon glyphicon-chevron-down text-muted pull-right">
                    </i>
                </div>
                <div class="profile-tab-content">
                </div>
            </div>
            <div id="photo" class="profile-section col-md-12">
                <div class="profile-tab-header">
                    <span class="glyphicon glyphicon-picture"></span><strong>Photo</strong> <i class="chevron glyphicon glyphicon-chevron-down text-muted pull-right">
                    </i>
                </div>
                <div class="profile-tab-content">
                    @Html.Partial("../Photo/_PhotoAlbum", Model.Photo)
                </div>
            </div>
        </div>
    </div>
    <div id="profile-menu" class="col-md-2 profile-section">
        <div class="">
            <div class="profile-header profile-header-menu">
                <strong>Menu</strong>
            </div>
            <div class="profile-content">
                <ul class="list-unstyled">
                    <li data-scroll-spy="information" class="active">
                        <a href="#">
                            <span class="glyphicon glyphicon-info-sign">
                            </span><span>Informations</span>
                        </a>
                    </li>
                    <li data-scroll-spy="localisation">
                        <a href="#">
                            <span class="glyphicon glyphicon-map-marker">
                            </span><span>Localisation</span>
                        </a>
                    </li>
                    <li data-scroll-spy="listen">
                        <a href="#">
                            <span class="glyphicon glyphicon-headphones">
                            </span><span>Écouter</span>
                        </a>
                    </li>
                    <li data-scroll-spy="photo">
                        <a href="#">
                            <span class="glyphicon glyphicon-picture"></span>
                            <span>Photo</span>
                        </a>
                    </li>
                </ul>
                <hr />
                <div class="profile-footer-menu">
                    @Html.Partial("../SocialMedia/_ShareButtons")
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="PicModal" tabindex="-1" role="dialog" aria-labelledby="PicModalLabel"
     aria-hidden="true">
    @Html.Partial("../Photo/ViewPictureDialog")
</div>
<div class="hidden">
    @Html.Partial("../SocialMedia/_Metadata-Event")
</div>
