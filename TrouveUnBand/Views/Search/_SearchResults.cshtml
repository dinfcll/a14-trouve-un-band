<!--Search Results-->
<div class="row">
    <h3 class="col-md-12">@ViewBag.ResultNumber résultats trouvés</h3>
    @foreach (var item in (List<TrouveUnBand.ViewModels.ResultViewModels>)ViewData["Results"])
    {
        <div class="col-md-3">
            <div class="thumbnail card">
                <img src="http://placehold.it/250x172" alt="Image">
                <div class="caption">
                    <h3>@Html.DisplayName(item.Name)</h3>
                    <b>@Html.DisplayName(item.Type)</b>
                    <p>@Html.DisplayName(item.Description)</p>
                    <p>
                        <span class="glyphicon glyphicon-map-marker"></span>
                        @Html.DisplayName(item.Location)
                    </p>               
                    <p>
                        @foreach (var genre in item.Genres)
                        {
                            <span class="label label-default">@genre</span>
                        }
                    </p>
                    <p>
                        @Html.ActionLink("Voir profil", "ViewProfile", "Search", new { type = item.Type, Id = item.ID }, new { @class = "btn btn-primary", @role = "button" })
                        <a href="#" class="btn btn-default" role="button">Button</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div><!--/Search Results-->
