@model TrouveUnBand.Models.Band
@Html.DisplayNameForModel()
@*
    Metadata de Schema.org
*@
<div>
    <div vocab="http://schema.org/" typeof="MusicGroup">
        <h2 property="name">@Model.Name</h2>
        <span property="description">
            @Model.Description
        </span>
        <meta property="place" content="@Model.Location" />
        @foreach (var item in Model.Users)
        {
            <div property="musicGroupMember" typeof"person">
                <meta property="familyName" content="@item.LastName" />
                <meta property="givenName" content="@item.FirstName" />
            </div>
        }
    </div>
</div>
@*
    Metadata de Open Graph protocol
*@
<div>
    <meta property="og:title" content="@Model.Name">
    <meta property="og:type" content="band">
    <meta property="og:url" content="@Request.Url">
    <meta property="og:image" content="@Model.photo">
    <meta property="og:site_name" content="TrouverUnBand.com">
    <meta property="og:description" content="Chercher et trouver un band ou un musicien">
    <meta property="og:street-address" content="@Model.Location">
</div>
