@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><span>
            Bonjour, <strong>@Html.Name(User.Identity.Name)</strong></span> <span class="glyphicon glyphicon-chevron-down small-glyphicon">
            </span></a>
            <ul class="dropdown-menu">
                <li>
                    <div class="navbar-login">
                        <div class="row">
                            <div class="col-lg-5 col-md-5">
                                <p class="text-center">
                                    <img width="90" src="@Html.Action("GetPhotoSrc", "Users")" />
                                </p>
                            </div>
                            <div class="col-lg-7 pull-right">
                                <p class="text-left">
                                    <strong>
                                        @Html.Action("GetUserFullName", "Users")
                                    </strong>
                                </p>
                                <p class="text-left small">
                                    Profil de @Html.Name(User.Identity.Name)</p>
                                <p class="text-left">
                                    @Html.ActionLink("Gestion de compte",
                                                                 "ProfileModification",
                                                                 "Users",
                                                                 routeValues: null,
                                                                 htmlAttributes: new
                                                                 {
                                                                     @class = "btn btn-primary btn-block btn-sm",
                                                                     title = "Manage"
                                                                 })
                                </p>
                            </div>
                        </div>
                    </div>
                </li>
                <li class="divider"></li>
                <li>
                    <div class="navbar-footer">
                        <div class="row">
                            <div class="col-lg-12">
                                <p>
                                    <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-danger btn-block">
                                        Déconnexion </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </li>
    </ul>
    using (Html.BeginForm("Logout", "Users", FormMethod.Post, new { id = "logoutForm" }))
    {
    @Html.AntiForgeryToken()
    }
}
else
{
    <ul class="nav navbar-nav">
        <li class="inscription">@Html.ActionLink("Inscription", "Register", "Users", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li class="connexion">@Html.ActionLink("Connexion", "Login", "Users", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>

}
