<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>

        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css")
        @Styles.Render("~/Content/bootstrapcss")
        <link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">
    </head>
    <body>
        <div class="navbar navbar-default navbar-fixed-top" role="navigation" id="titre">
            <!--NAVBAR-->
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("TrouverUnBand.com", "Index", "Home", null, new { @class = "navbar-brand" })

                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li data-path="/">@Html.ActionLink("Accueil", "Index", "Home")</li>
                        @*<li id="about">@Html.ActionLink("À propos de", "About", "Home")</li>
                        <li id="contact">@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        <li data-path="/Group">@Html.ActionLink("Groupes", "Index", "Group")</li>
                        <li data-path="/Event">@Html.ActionLink("Événements", "Index", "Event")</li>
                        <li data-path="/Advert">@Html.ActionLink("Annonces", "Index", "Advert")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.Partial("_LoginPartial")</li>
                    </ul>

                    @using (Html.BeginForm("Index", "Search", FormMethod.Get, new { @class = "navbar-form navbar-right", @role = "search", @id="header-search-form" }))
                    {
                        <div class="input-group">
                            @Html.TextBox("SearchString", "", new { @class = "form-control", @placeholder = "Recherche rapide" })
                            @Html.ValidationMessage("SearchString")
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit" value="search">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </span>
                        </div>
                    }
                </div><!--/.nav-collapse -->
            </div>
        </div><!--END NAVBAR-->
        <!--MAIN CONTENT-->
        
                
        <div id="page-alerts">
            @{ Html.RenderPartial("_Alerts"); }
        </div>

        <div class="main-container container">
            @RenderSection("featured", required: false)
            @RenderSection("scripts", required: false)

            @RenderBody()
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")

        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

        @Scripts.Render("~/bundles/bootstrapjs")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/SocialMedia")
        @Scripts.Render("~/bundles/customjs") 
    </body>
</html>
