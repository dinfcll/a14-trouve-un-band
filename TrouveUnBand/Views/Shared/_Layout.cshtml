<!DOCTYPE html>
<script>
$(function() {
    $('.nav a').on('click', function(){ 
        if($('.navbar-toggle').css('display') !='none'){
            $(".navbar-toggle").trigger( "click" );
        }
    });
});
</script>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/signin.css")
        @Styles.Render("~/Content/bootstrap.css")
        @Styles.Render("~/Content/Site.css")
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!--NAVBAR-->
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#tocollapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("TrouveUnBand.com", "Index", new { controller = "Home" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse" id="tocollapse">
                    <ul class="nav navbar-nav">
                        <li id="accueil">@Html.ActionLink("Accueil", "Index", "Home")</li>
                        <li id="apropos">@Html.ActionLink("À propos de", "About", "Home")</li>
                        <li id="contact">@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li id="groupe">@Html.ActionLink("Groupe", "Index", "Group")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right" >
                        <li>@Html.Partial("_LoginPartial")</li>
                    </ul>
                    @using (Html.BeginForm("Index", "Search", FormMethod.Get, new { @class="navbar-form navbar-right", @role="search" }))
                    {
                        @Html.TextBox("SearchString", "", new { @class = "form-control", @placeholder = "Recherche rapide" })
                        @Html.ValidationMessage("SearchString")
                        <button type="submit" class="glyphicon glyphicon-search form-control" value="search"></button>
                    }
                </div><!--/.nav-collapse -->
            </div>
        </div><!--END NAVBAR-->
        <!--MAIN CONTENT-->
        <div class="page-alerts">
            @if (TempData["TempDataError"] != null && TempData["TempDataError"] != "")
            {
                <div class="alert alert-danger page-alert">
                    <button type="button" class="close"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                    <span class="glyphicon glyphicon-ban-circle"></span><strong> Oops! </strong><span>@TempData["TempDataError"]</span>
                </div>
            }
            @if (TempData["success"] != null && TempData["success"] != "")
            {
                <div class="alert alert-success page-alert" id="alert-1">
                    <button type="button" class="close"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                    <span class="glyphicon glyphicon-ok"></span><strong> Bravo! </strong><span>@TempData["success"]</span>
                </div>
            }
        </div>
        <div class="container" style="padding-top:100px">
        @RenderSection("featured", required: false)
        @RenderSection("scripts", required: false)
        @RenderBody()
        </div><!-- /.container -->

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
        @Scripts.Render("~/bundles/bootstrapjs")
        @Scripts.Render("~/Scripts/alert.js")
        @Scripts.Render("~/Scripts/bootstrap-validation.js")
        @Scripts.Render("~/Scripts/star-rating.js")
        @Scripts.Render("~/Scripts/tooltips.js")
        @Scripts.Render("~/Scripts/ModifProfil.js")
        @Scripts.Render("~/Scripts/disable-search-ddl.js")
        @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    </body>
</html>
