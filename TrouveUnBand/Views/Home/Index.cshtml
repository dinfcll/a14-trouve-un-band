@{
    ViewBag.Title = "Page d'accueil";
}

<div id="NewsfeedUser" class="row">
@foreach (var item in (List<TrouveUnBand.ViewModels.ResultViewModels>)ViewData["NewsfeedUser"])
{  
    <div class="col-sm-6 col-md-1 container-fluid NewsfeedItems">
        <div class="thumbnail card btn btn-default"  data-toggle="tooltip" data-placement="bottom" title="@Html.DisplayFor(modelItem => item.Name)">
            @if (item.Photo == null)
            {
                <img src="http://placehold.it/100x100" alt="Image">
            }
            else
            {
                var photo = "data:image/jpeg;base64," + Convert.ToBase64String(item.Photo);
                <img src="@photo" width="100" height="100" class="photo" alt="Image">
            }
        </div>
        @Html.DisplayFor(modelItem => item.Name)
    </div>
}
</div>

<div id="NewsfeedBand" class="row">
@foreach (var item in (List<TrouveUnBand.ViewModels.ResultViewModels>)ViewData["NewsfeedBand"])
{
    <div class="col-md-3 NewsfeedItems thumbnail">
        <img src="http://placehold.it/200x200">
        <div class="caption container-fluid">
            <div class="row">
            @Html.Label("Nom")
            @Html.DisplayFor(modelItem => item.Name)
            </div>
            <div class="row">
            @Html.Label("Location")
            @Html.DisplayFor(modelItem => item.Location)
            </div>
            <div class="row">
            @Html.Label("Description")
            @Html.DisplayFor(modelItem => item.Description)
            </div>
            <div class="row">
            @Html.ActionLink("Details", "Details", new { id = item })
            </div>
            <a href="#" class="btn btn-primary" role="button">Button</a> 
            <a href="#" class="btn btn-default" role="button">Button</a>
        </div>
     </div>      
}
</div>

