@model TrouveUnBand.ViewModels.HomePageViewModel
@{
    ViewBag.Title = "Page d'accueil";
}
<div class="home-container">
    <div id="home-jumbotron" class="jumbotron">
        <div id="home-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active">
                    <img id="homeImage" src="" alt="" />
                    <div class="carousel-caption">
                        <h1 class="col-md-12">
                            À la recherche d'un band?
                        </h1>
                        <h3>
                            Recherchez un band, un musicien ou un événement.
                        </h3>
                        <h3>
                            Créez vos propres événements et annonces.
                        </h3>
                        <h3>
                            Faites la promotion de votre band, votre événement ou votre bar.
                        </h3>
                        <h3>
                            Tout ça GRATUITEMENT!
                        </h3>
                        <p>@Html.ActionLink("Inscrivez-vous", "Register", "Users", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-primary btn-lg col-md-6 col-md-offset-3" })</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="home-content-container">
        <div class="home-section col-md-12">
            <div class="container">
                <div class="home-section-header col-md-12">
                    <h1>
                        Derniers Musiciens Inscrits
                    </h1>
                </div>
                <div class="home-section-content">
                    @foreach (var item in Model.UserList)
                    {
                        <div class="home-thumbnail img-container-banner col-md-3">
                            <div class="img-container-banner">
                                <img src="@item.Photo" alt="" />
                                <p class="banner">
                                    Nouveau!
                                </p>
                            </div>
                            <div class="home-thumbnail-middle">
                                <p>
                                    <strong>@item.Name</strong>
                                </p>
                                <p>@item.Location</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="home-section-invert home-band-section col-md-12">
            <div class="container">
                <div class="home-section-header col-md-12">
                    <h1>
                        Derniers Groups Inscrits
                    </h1>
                </div>
                <div class="home-section-content">
                    @foreach (var item in Model.UserList)
                    {
                        <div class="home-thumbnail-invert col-md-3">
                            <img src="@item.Photo" alt="" />
                            <div class="home-thumbnail-middle">
                                <p>
                                    <strong>@item.Name</strong>
                                </p>
                                <p>@item.Location</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="home-section col-md-12">
            <div class="container">
                <div class="home-section-header col-md-6 col-md-offset-3">
                    <h1 class="">
                        Prochains Événements
                    </h1>
                    <h4>
                        Pour ne rien rater
                    </h4>
                </div>
                <div class="home-section-content">
                    @foreach (var item in Model.EventList)
                    {
                        <div class="event-panel col-md-12">
                            <img src="@item.Photo" alt="Image" class="col-md-3">
                            <div class="event-panel-date col-md-2">
                                <h3 class="col-md-3">@item.DayOfTheWeek</h3>
                                <h1 class="col-md-12">@item.DayAndMonth</h1>
                            </div>
                            <div class="event-panel-info col-md-5">
                                <span class="col-md-12">@item.Location</span>
                                <h2 class="col-md-12">@item.Name</h2>
                                <span class="col-md-12">Deicide</span>
                            </div>
                            <div class="event-panel-button col-md-2">
                                @Html.ActionLink("Détails", "EventProfile", new { id = item.Event_ID }, new { @class = "btn btn-primary col-md-12 pull-right" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="home-section-invert col-md-12">
            <div class="container">
                <div class="home-section-header col-md-6 col-md-offset-3">
                    <h1>
                        Dernières Annonces
                    </h1>
                    <h4>
                        Ne manquez pas votre chance
                    </h4>
                </div>
                <div class="home-section-content">
                    @foreach (var item in Model.AdvertList)
                    {
                        <div class="event-panel home-panel-invert col-md-12">
                            <img src="@item.Photo" alt="Image" class="col-md-3">
                            <div class="event-panel-date col-md-2">
                                <h3 class="col-md-3">
                                    Expiration/
                                </h3>
                                <h1 class="col-md-12">@item.ExpirationDate</h1>
                            </div>
                            <div class="event-panel-info col-md-5">
                                <span class="col-md-12">@item.Location</span>
                                <h2 class="col-md-12">@item.Name</h2>
                                <span class="col-md-12">@item.Status</span>
                            </div>
                            <div class="event-panel-button">
                                <p>@item.Description</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="home-section-invert col-md-12" style="background-image: url(https://31.media.tumblr.com/04eade104c0ea8bb29069a1d16594faf/tumblr_inline_ncriy1MOOX1s7wopc.gif);
            height: 256px;">
        </div>
    </div>
</div>
