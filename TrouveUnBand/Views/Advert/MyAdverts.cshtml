<script>
    var onglet = document.getElementById("Advert");
    onglet.setAttribute("class", "active");
</script>
@model IEnumerable<TrouveUnBand.Models.Advert>

@{
    ViewBag.Title = "Mes Annonces";
}
<div class="panel panel-default" style="border:0;">
    <div class="panel-body">
        <div class="row col-md-8">
            <h3>Mes Annonces</h3>
        </div>
        <div class="col-md-4">
            @if(User.Identity.Name != "")
            {
                @Html.ActionLink("Nouvelle Annonce", "Create", new { controller = "Advert" }, new { @class = "btn btn-primary col-md-6  col-md-pull-1" })
                @Html.ActionLink("Toutes les annonces", "Index", new { controller = "Advert" }, new { @class = "btn btn-primary col-md-6" })
            }
        </div>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        if (User.Identity.Name == item.User.Nickname)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><h3>@item.Type</h3></h3>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="row col-md-3 form-group">
                            @if (item.Photo == null)
                            {
                                <img src="http://placehold.it/250x200" alt="Image">
                            }
                            else
                            {
                                var photo = "data:image/jpeg;base64," + Convert.ToBase64String(item.Photo);
                                <img src="@photo" width="250" class="photo" alt="Image">
                            }
                        </div>
                        <div class="col-md-4">
                            <div class="col-md-12 form-group">
                                <span class="glyphicon glyphicon-calendar"></span> @Html.DisplayName(item.CreationDate.ToString("dd MMMM yyyy"))
                            </div>
                            <div class="col-md-12 form-group">
                                <span class="glyphicon glyphicon-music"></span>
                                <span>
                                    @{var i = 0;
                                      var TextPopOver = "";
                                      foreach (var genre in item.Genres)
                                      {
                                          TextPopOver += "<p>" + Html.DisplayName(genre.Name) + "</p>";
                                          if (i < 1)
                                          {
                                                @Html.DisplayName(genre.Name + ", ");
                                          }
                                          if (i == 1)
                                          {
                                                @Html.DisplayName(genre.Name + "");
                                          }
                                          i++;
                                      }  
                                    }  
                                    <a href="#" tabindex="0" role="button"
                                        data-toggle="popover" data-html="true" title="Genres de l'événement" data-content="@TextPopOver">
                                            <span class="label label-default">...</span>
                                    </a>
                                </span>
                            </div>
                            <div class="col-md-12 form-group">
                                <span class="glyphicon glyphicon-map-marker"></span>@Html.DisplayName(item.Location)
                            </div>
                            <div class="col-md-12 form-group">
                                <span class="glyphicon glyphicon-ok"></span> @Html.DisplayName(item.Status)
                            </div>
                        </div>
                        <div id="AdvertDesc" class="row col-md-5 form-group">
                            <hr class="colorgraph"/>
                            <h4>Description de l'annonce</h4>
                            <p>
                                @{var DescText = item.Description.Replace(System.Environment.NewLine, "<br />");}
                                @Html.Raw(DescText)
                            </p>
                            <hr class="colorgraph"/>
                        </div>
                        
                    </div>
                </div>
                <div class="panel-footer" style="height:55px">
                    <div class="col-md-12">
                        @if (item.User.Nickname == User.Identity.Name)
                        {
                            <div class="col-md-3">
                                @Html.ActionLink("Modifier l'annonce", "Edit", new { id = item.Advert_ID }, new { @class = "btn btn-primary col-md-12" })
                            </div>
                            <div class="col-md-3 col-md-push-1">
                                 @if (item.Status != "Fermée")
                                 {
                                    @Html.ActionLink("Fermer l'annonce", "Close", new { id = item.Advert_ID }, new { @class = "btn btn-warning col-md-12" })
                                 }
                                 else
                                 {
                                    @Html.ActionLink("Réouvrir l'annonce", "ReOpen", new { id = item.Advert_ID }, new { @class = "btn btn-warning col-md-12" })
                                 }
                            </div>
                            <div class="col-md-3 col-md-push-2">          
                                @Html.ActionLink("Supprimer l'annonce", "Delete", new { id = item.Advert_ID }, new { @class = "btn btn-danger col-md-12" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>
