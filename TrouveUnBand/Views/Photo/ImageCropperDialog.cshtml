@model TrouveUnBand.Models.User

@{
    ViewBag.Title = "ImageCropperDialog";
}

<div class="modal-dialog modal-crop" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-content">
        <div class="modal-header">
            <button id="closeDialog" type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="myModalLabel">Redimenssion de l'image</h4>
        </div>
        <div class="modal-body" style="text-align: center">
            <img id="PicToCrop" class="CropThumbNail" src="" />
        </div>
        <div class="modal-footer">
            <input id="HiddenUploader" type="file" style="display:none" />
            <button type="submit" class="btn btn-primary">Valider la nouvelle photo</button>
        </div>
    </div>
</div>

    @Html.HiddenFor(model => model.ProfilePicture.PicX, new { id = "X" })
    @Html.HiddenFor(model => model.ProfilePicture.PicY, new { id = "Y" })
    @Html.HiddenFor(model => model.ProfilePicture.PicWidth, new { id = "Width" })
    @Html.HiddenFor(model => model.ProfilePicture.PicHeight, new { id = "Height" })
