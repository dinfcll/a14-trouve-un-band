@using TrouveUnBand.Models
@model TrouveUnBand.ViewModels.BandCreationViewModel

@{
    ViewBag.Title = "Supprimer";
}
<div class="container col-md-8 col-md-offset-2">
    @using (Html.BeginForm("Delete", "Group", FormMethod.Post, new { @id = "FormBandDelete" }))
    {
        @Html.HiddenFor(model => model.Band.Band_ID)          
        <div class="col-md-12">
            <div id="band-members" class="panel panel-default">    
                <div class="panel-heading">Suppression</div>

                <div class="panel-body">
                    <div class="col-md-6 box">
                        <h4>Nom</h4>
                        @Model.Band.Name
                    </div>

                    <div class="col-md-6 box">
                        <h4>Ville</h4>
                        @Model.Band.Location
                    </div>

                    <div class="col-md-12 box">
                        <h4>Description</h4>
                        @Model.Band.Description
                    </div>
                </div>
            
                <div class="panel-body">
                    <table class="table box">
                        <tr>
                            <th>Genres</th>
                        </tr>
                        @foreach (var item in Model.Band.Genres)
                        {
                            <tr>
                                <td class="name-cell">@item.Name</td>
                            </tr>
                        }
                    </table>
                </div>

                <div class="panel-body">
                    <table class="table box">
                        <tr>
                            <th>Membres du groupe</th>
                            <th></th>
                        </tr>
                        @foreach (var member in (List<BandMemberModel>)Session["BandMembers"])
                        {
                            <tr>
                                <td class="name-cell">@member.FirstName @member.LastName</td>
                                <td class="location-cell">@member.Location</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    
        <div class="col-md-6">
            <input type="button" value="Annuler" onclick="location.href='@Url.Action("Index", "Group")'" class="btn btn-default btn-lg col-md-12"/>
        </div>
        <div class="col-md-6">
            <button id="btnTerminer" type="submit" class="btn btn-primary btn-lg col-md-12" form="FormBandDelete">Terminer</button>
        </div>
    }
</div>
