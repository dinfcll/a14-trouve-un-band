@model IEnumerable<TrouveUnBand.Models.Band>

@{
    ViewBag.Title = "Index";
}

<h2>Vos bands</h2>

<p>
    @Html.ActionLink("Créer un Band", "Create")
</p>

@if (Request.IsAuthenticated)
{
    if (Model.Any())
    {
        <table class="table table-striped table-bordered table-hover" data-toggle="table">
            <tr>
                <th data-field="Name">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    <p>Action</p>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <button type="button" class="btn btn-default btn-sm" title="Modifier" onclick="location.href='@Url.Action("Edit", "Group", new { id = item.Band_ID })'">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </button>
                        <button type="button" class="btn btn-default btn-sm" title="Consulter" onclick="location.href='@Url.Action("ViewProfile", "Search", new {type = "BAND", id = item.Band_ID })'">
                            <span class="glyphicon glyphicon-list-alt"></span>
                        </button>
                        <button type="button" class="btn btn-default btn-sm" title="Supprimer" onclick="location.href='@Url.Action("Delete", "Group", new { Id = item.Band_ID })'">
                            <span class="glyphicon glyphicon-trash"></span>
                        </button>
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <h2><small>Vous ne faites partie d'aucun band</small></h2>
    }
}
